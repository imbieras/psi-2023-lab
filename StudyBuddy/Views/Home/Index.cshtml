@using StudyBuddy.Abstractions
@using StudyBuddy.Services.UserService
@using StudyBuddy.Services.UserSessionService
@inject IUserService UserService
@inject IUserSessionService UserSessionService

@{
    ViewData["Title"] = "Home Page";
    var currentUserId = UserSessionService.GetCurrentUserId();
    IUser? user = null;

    if (currentUserId != null)
    {
        user = await UserService.GetUserByIdAsync(currentUserId.Value);
    }
}

<div class="container">
    <div class="text-center mt-5">
        @if (user != null)
        {
            <h1 class="display-4">Welcome, @user.Name!</h1>

            <div class="mt-3">
                <h5>Your Study Interests</h5>
                @if (user.Hobbies != null && user.Hobbies.Any())
                {
                    <div class="mb-3">
                        @foreach (var hobby in user.Hobbies)
                        {
                            <span class="badge bg-secondary me-2">@hobby</span>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <h1 class="display-4">Welcome</h1>
            <p>
                It seems you are new here! Join the other @Model users now! <a asp-area="" asp-controller="Profile" asp-action="CreateProfile">Sign up now!</a>
            </p>
        }
    </div>
</div>

