
@model List<StudyBuddy.Models.User>
@using StudyBuddy.Models



@foreach (var user in Model)
{
    var avatarUrl = Url.Content("~/avatars/" + user.AvatarFileName);

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">@user.Name Profile</h2>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="avatar-container" style="background-image: url('@avatarUrl');"></div>
                    <ul class="list-group list-group-flush mt-4">
                        <li class="list-group-item">
                            <strong>Birthday:</strong> @user.Birthdate.ToShortDateString()
                        </li>
                        <li class="list-group-item">
                            <strong>Favorite Subject:</strong> @user.Subject
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
